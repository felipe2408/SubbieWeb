@{
    ViewBag.Tittle = "Login";
    Layout = "~/Views/Shared/_LayaoutLoginRegistrer.cshtml";
}
<link href="~/Content/Login.css" rel="stylesheet" />

<header>
    <img src="~/img/Trazado -1.png" />
    <img src="~/img/Trazado -2.png" />
</header>
<div>
    <div class="contenedor_principal">
        <div class="texto_bienvenidos">
           
        </div>

        <div class="form-container col-lg-12">
            <div class="titulo_inicia_sesion">
                INGRESAR CUENTA
            </div>
            <form action="@Url.Content("~/Splash/Login")" method="post"  class="contenedor_formulario">
                <input type="email" placeholder="Correo electrónico" name="correo" class="form-control email" required>
                <input type="password" placeholder="Password" name="password" class="form-control password" required>
                <input type="submit" value="Ingresar" class="Ingresar botones-principales" required>
            </form>
            <div class="contenedor_iconos">
                <div class="iconos"></div>
                <div class="iconos"></div>
                <div class="iconos"></div>
            </div>
        </div>

    </div>
    <footer>
        <img src="~/img/Trazado -1.png" />
        <img src="~/img/Trazado -2.png" />
    </footer>


</div>